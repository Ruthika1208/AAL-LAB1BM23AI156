#include <stdio.h>
#include <stdbool.h>
#include <string.h>

#define MAX 10

char board[MAX][MAX];
int n;


void printSolution(int solNum) {
	int i;
    printf("Arrangement %d\n", solNum);
    for ( i = 0; i < n; i++) {
        printf("%s\n", board[i]);
    }
    printf("\n");
}


bool isSafe(int row, int col) {
    int i, j;

   
    for (i = 0; i < col; i++)
        if (board[row][i] == 'Q')
            return false;

    
    for (i = row, j = col; i >= 0 && j >= 0; i--, j--)
        if (board[i][j] == 'Q')
            return false;

    
    for (i = row, j = col; i < n && j >= 0; i++, j--)
        if (board[i][j] == 'Q')
            return false;

    return true;
}

void solveNQueens(int col, int *solutionCount) {
	int i;
    if (col == n) {
        (*solutionCount)++;
        printSolution(*solutionCount);
        return;
    }
